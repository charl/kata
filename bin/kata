require 'kata'

def usage
  puts(<<EOF); exit 1
NAME
    kata - Ruby kata management

SYNOPSIS
    kata [COMMAND] [ARGS]

DESCRIPTION
    The kata gem allows one to manage their personal development in the
    practice of writing code through repitition.

PRIMARY COMMANDS
    kata setup file
        Setup a github repo for the kata development session

    kata take file
        Start a kata development session

    kata version
        Current installed version number

    kata help
        This usage message
EOF
end

begin
  argument = ARGV[0].downcase.to_sym
rescue 
  usage
end

case argument
  when :setup
    raise ArgumentError unless ARGV[1] && File.exists?(ARGV[1])

    name = nil

    File.open(ARGV[1]).each do |line|
      if line.match /^kata *\"([^\"]*)\" *do$/
        name = $1
        break
      end
    end

    setup = Kata::Setup.new name
    setup.build_tree
    setup.create_repo rescue Exception
  when :take
    load ARGV[1]
  when :version
    puts "kata #{Kata::VERSION}"
  else
    usage
end
